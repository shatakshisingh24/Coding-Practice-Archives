PROBLEM- https://mycode.prepbytes.com/problems/fundamentals/BOXTOY
Solution: 

#include <bits/stdc++.h>
using namespace std;

int main()
{
  //write your code here
  int t, count=0;
  cin>>t;
  
  for(int i=0;i<t;i++)
  {
    int x,y;
    cin>>x>>y;
    if(y-x >= 2 )
    {
      count=count+1;
    }
  }
  cout<<count;
  
  
  
  return 0;
}
